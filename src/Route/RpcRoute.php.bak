<?php
namespace Imi\Rpc\Route;

use Imi\Event\Event;
use Imi\Bean\Annotation\Bean;
use Imi\Server\Route\RouteCallable;
use Imi\Rpc\Route\Annotation\Contract\IRpcRoute;
use Imi\Rpc\Contract\IRpcController;

/**
 * @Bean("RpcRoute")
 */
class RpcRoute implements IRoute
{
    /**
     * 路由解析处理
     * @param mixed $data
     * @return array
     */
    public function parse($data)
    {
        return null;
    }

    /**
     * 增加路由规则，直接使用注解方式
     * @param \Imi\Rpc\Route\Annotation\Contract\IRpcRoute $annotation
     * @param mixed $callable
     * @param array $options
     * @return void
     */
    public function addRuleAnnotation(IRpcRoute $annotation, $callable, $options = [])
    {
        // callable
        $callable = $this->parseCallable($callable);
        $isObject = is_array($callable) && isset($callable[0]) && $callable[0] instanceof IRpcController;
        if($isObject)
        {
            // 复制一份控制器对象
            $callable[0] = clone $callable[0];
        }

        $eventName = 'IMI.RPC.ROUTE.ADD_RULE:' . $annotation->getRpcType();
        Event::trigger($eventName, \compact('annotation', 'callable', 'options'), $this);

    }

    /**
     * 处理回调
     * @param array $params
     * @param mixed $callable
     * @return callable
     */
    private function parseCallable($callable)
    {
        if($callable instanceof RouteCallable)
        {
            return $callable->getCallable();
        }
        else
        {
            return $callable;
        }
    }
}